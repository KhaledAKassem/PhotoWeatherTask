<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="viewModel"
            type="com.github.khaledakassem.photo_weather.ui.fragments.photo_history_details.PhotoHistoryDetailsViewModel" />
    </data>

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_full_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <ImageView
        android:id="@+id/fb_share"
        android:layout_width="@dimen/x50dp"
        android:layout_height="@dimen/x50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x50dp"
        android:src="@drawable/fb" />



</RelativeLayout>
</layout>
